.jumbotron-fluid {
    padding:0;
}
header {
  margin-top: -15px;
}
img{
  width:100%;
  max-width: 100%;
  height:auto;
}
.card-img-top{
  width:100%;
  height:auto;
}

#site-title {
    max-width:150px;
}
#size-banner{
    height:580px;
    padding-top:60px;
}
header .display-2 {
    font-size: 350%;
    line-height:1;
    font-weight:300;
}
.banner-tag-line {
    font-size:150%;
    line-height:1.4;
    font-weight:300;
}

@media (min-width: 48em) { /* -md- and above */
  #size-banner{
      height:600px;
      padding-top:150px;
  }
  header .display-2 {
    font-size: 400%;
  }
  .banner-tag-line {
    font-size:180%;
}
  .homeContainer {
      max-width: 100% !important;
      height: 100%;
      margin-left: 0;
      margin-right: 0;
      padding: 0;
      overflow: hidden
  }
}


.btn-banner {
  font-weight: 600;
  color: #002157;
  border-color: #002157;
  margin-right: 10px;
}

.homeContainer .sideBar {
	width: 25%;
	height: 90vh;
	float: left;
	border: 1px solid #353535;
	overflow: hidden;
	background-color: #373a3c;
	color: #fff
}

.homeContainer .rightNav {
	width: calc(100% - 25%);
	height: 90vh;
	border: 1px solid #2f0aa9;
	overflow: hidden
}

.bg-inverse {
	background-color: #373a3c;
}
.active {
	color: #fff;
}
.navbar-toggler {
	border: solid 0px silver !important;
	border-radius: 2px;
	color: #eee;
}

.sidebarTitle {
    float: left
}
/* ---------------------- PARALLAX --------------------------------------*/
.parallax {
    text-align:center;
    background-position:center center;
    background-repeat:no-repeat;
    background-size:30%;
    background-attachment:fixed!important;
    overflow:hidden;
}

.parallax-pattern-overlay {
    background-color: rgba(255,255,255,0.5);
}

/* ----------------------- FOOTER ---------------------------------------*/
.footer {
    background:#363636;
    margin-top:-30px;
    position:relative;
    padding: 0;
}

/*.footer .container {
    padding-top: 10px;
}*/

.footer p {
    color:#fff;
    font-size:.9em;
    line-height:24px;
    font-weight:300;
    text-align:center;
    text-transform:uppercase;
    margin-top: 30px;
}
